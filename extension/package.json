{
  "name": "anvil-holo",
  "displayName": "AnvilHolo",
  "description": "Click-to-Context visual map for context-slicer",
  "version": "0.0.1",
  "publisher": "devshero",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:anvilHolo.open",
    "onCommand:anvilHolo.debugWrite",
    "onCommand:anvilHolo.addToGraph"
  ],
  "contributes": {
    "commands": [
      {
        "command": "anvilHolo.open",
        "title": "AnvilHolo: Open Holographic Map"
      },
      {
        "command": "anvilHolo.debugWrite",
        "title": "AnvilHolo: Debug Write (.context-slicer/hello.txt)"
      },
      {
        "command": "anvilHolo.addToGraph",
        "title": "AnvilHolo: Add Module To Graph"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "anvilHolo.addToGraph",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run build:ext && npm run build:webview",
    "build:ext": "node ./esbuild.extension.mjs",
    "build:webview": "node ./esbuild.webview.mjs",
    "build:integration-tests": "node ./esbuild.tests.mjs",
    "watch": "node ./esbuild.extension.mjs --watch & node ./esbuild.webview.mjs --watch",
    "package": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/d3-force": "^3.0.10",
    "@types/dagre": "^0.7.53",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.27.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "d3-dispatch": "^3.0.1",
    "d3-force": "^3.0.0",
    "d3-quadtree": "^3.0.1",
    "d3-timer": "^3.0.1",
    "dagre": "^0.8.5",
    "lucide-react": "^0.539.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reactflow": "^11.11.4"
  }
}
