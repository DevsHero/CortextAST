{
  "name": "anvil-holo",
  "displayName": "AnvilHolo",
  "description": "Click-to-Context visual map for context-slicer",
  "version": "0.0.1",
  "publisher": "devshero",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:anvilHolo.open",
    "onCommand:anvilHolo.debugWrite"
  ],
  "contributes": {
    "commands": [
      {
        "command": "anvilHolo.open",
        "title": "AnvilHolo: Open Holographic Map"
      },
      {
        "command": "anvilHolo.debugWrite",
        "title": "AnvilHolo: Debug Write (.context-slicer/hello.txt)"
      }
    ]
  },
  "scripts": {
    "build": "npm run build:ext && npm run build:webview",
    "build:ext": "node ./esbuild.extension.mjs",
    "build:webview": "node ./esbuild.webview.mjs",
    "watch": "node ./esbuild.extension.mjs --watch & node ./esbuild.webview.mjs --watch",
    "package": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.13.1",
    "@types/dagre": "^0.7.53",
    "@types/vscode": "^1.90.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "esbuild": "^0.27.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.7.3",
    "@vscode/test-electron": "^2.4.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "dagre": "^0.8.5",
    "lucide-react": "^0.539.0",
    "reactflow": "^11.11.4"
  }
}
